<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>Servlets.SignUp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>Servlets.SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>Servlets.SignOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSignIn</servlet-name>
        <servlet-class>Servlets.AdminSignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSignOut</servlet-name>
        <servlet-class>Servlets.AdminSignOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GeneralSearch</servlet-name>
        <servlet-class>Servlets.GeneralSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecipeSearch</servlet-name>
        <servlet-class>Servlets.RecipeSearch</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/SignUp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/SignOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSignIn</servlet-name>
        <url-pattern>/AdminSignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSignOut</servlet-name>
        <url-pattern>/AdminSignOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeneralSearch</servlet-name>
        <url-pattern>/GeneralSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecipeSearch</servlet-name>
        <url-pattern>/RecipeSearch</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error_page.jsp</location>
    </error-page>
</web-app>
